---
const experiences = [
  {
    title: 'Rotational Intern, Employee Benefits',
    company: 'Shepherd Insurance',
    period: 'Summer 2025',
    summary: 'Analyzed pharmacy benefit structures and drug trend data to surface cost-saving opportunities in employer health plans.',
  },
  {
    title: 'Co-founder & Finance Executive',
    company: 'Purdue Launch Consulting Club',
    period: '2023 – Present',
    summary: 'Co-founded a student consulting org — managed finances, led project teams, and built the website.',
  },
  {
    title: 'Founder & Head Analyst',
    company: 'Father Flips',
    period: '2021 – 2023',
    summary: 'Built a market analysis group around limited-availability software pricing. 260% client ROI.',
  },
];
---

<section id="experience" aria-label="Work experience">
  <h2 class="section-label">WORK</h2>
  <div class="list">
    {experiences.map((exp) => (
      <div class="entry">
        <div class="entry-header">
          <div>
            <h3>{exp.title}</h3>
            <p class="company">{exp.company}</p>
          </div>
          <span class="period">{exp.period}</span>
        </div>
        <p class="summary">{exp.summary}</p>
      </div>
    ))}
  </div>
</section>

<style>
  section {
    max-width: var(--content-max);
    margin-bottom: var(--space-2xl);
  }

  .section-label {
    font-size: var(--text-sm);
    letter-spacing: 0.08em;
    color: var(--accent);
    margin-bottom: var(--space-lg);
  }

  .list {
    display: flex;
    flex-direction: column;
  }

  .entry {
    padding: var(--space-6) 0;
    border-top: 1px solid var(--border);
  }

  .entry-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-md);
    margin-bottom: var(--space-xs);
  }

  h3 {
    font-size: var(--text-base);
    color: var(--foreground);
  }

  .company {
    font-size: var(--text-sm);
    color: var(--secondary);
  }

  .period {
    font-size: var(--text-sm);
    color: var(--secondary);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .summary {
    font-size: var(--text-sm);
    color: var(--muted);
    line-height: 1.6;
    max-width: 60ch;
  }

  @media (max-width: 768px) {
    section {
      margin-bottom: var(--space-xl);
    }

    .section-label {
      margin-bottom: var(--space-md);
    }

    .entry {
      padding: var(--space-md) 0;
    }

    .entry-header {
      flex-direction: column;
      gap: 0;
    }

    .period {
      margin-top: 2px;
    }
  }
</style>
