---
const experiences = [
  {
    title: 'Rotational Intern, Employee Benefits',
    company: 'Shepherd Insurance',
    period: 'Summer 2025',
    summary: 'Analyzed pharmacy benefit structures and drug trend data to surface cost-saving opportunities in employer health plans.',
  },
  {
    title: 'Co-founder & Finance Executive',
    company: 'Purdue Launch Consulting Club',
    period: '2023 – Present',
    summary: 'Co-founded a student consulting org — managed finances, led project teams, and built the website.',
  },
  {
    title: 'Founder & Head Analyst',
    company: 'Father Flips',
    period: '2021 – 2023',
    summary: 'Built a market analysis group around limited-availability software pricing. 260% client ROI.',
  },
];
---

<section id="experience" class="experience" aria-label="Work experience">
  <div class="experience-inner">
    <h2 class="section-label">Work</h2>
    <div class="list">
      {experiences.map((exp) => (
        <div class="entry">
          <div class="entry-main">
            <h3>{exp.title}</h3>
            <p class="company">{exp.company}</p>
          </div>
          <span class="period">{exp.period}</span>
          <p class="summary">{exp.summary}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience {
    background: var(--background);
  }

  .experience-inner {
    max-width: var(--max-width-wide);
    margin: 0 auto;
    padding: var(--space-xl) var(--gutter);
  }

  .section-label {
    font-size: var(--text-sm);
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--muted);
    margin-bottom: var(--space-lg);
  }

  .list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .entry {
    display: grid;
    grid-template-columns: 1fr auto;
    grid-template-rows: auto auto;
    column-gap: var(--space-md);
    row-gap: var(--space-xs);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border);
  }

  .entry:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .entry-main {
    grid-column: 1;
    grid-row: 1;
  }

  h3 {
    font-size: var(--text-lg);
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 2px;
  }

  .company {
    font-size: var(--text-sm);
    color: var(--secondary);
    font-weight: 500;
  }

  .period {
    grid-column: 2;
    grid-row: 1;
    font-size: var(--text-sm);
    color: var(--accent-warm);
    white-space: nowrap;
    align-self: start;
    padding-top: 3px;
  }

  .summary {
    grid-column: 1 / -1;
    grid-row: 2;
    font-size: var(--text-sm);
    color: var(--secondary);
    line-height: 1.6;
    max-width: 65ch;
  }

  @media (max-width: 640px) {
    .entry {
      grid-template-columns: 1fr;
    }

    .period {
      grid-column: 1;
      grid-row: 2;
      padding-top: 0;
    }

    .summary {
      grid-row: 3;
    }
  }
</style>
