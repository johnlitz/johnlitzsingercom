---
const currentYear = new Date().getFullYear();
---

<footer id="contact" class="footer" aria-label="Contact and footer">
  <div class="footer-inner">
    <div class="contact-block">
      <h2 class="section-label">Let's connect</h2>
      <div class="contact-links">
        <a href="mailto:jlitzsin@purdue.edu">jlitzsin@purdue.edu</a>
        <a href="https://www.linkedin.com/in/johnlitzsinger" target="_blank" rel="noopener noreferrer">LinkedIn</a>
        <a href="/John_Litzsinger_Resume.pdf" download>Resume</a>
      </div>
    </div>
    <p class="copyright">&copy; {currentYear} John Litzsinger</p>
  </div>
</footer>

<style>
  .footer {
    margin-top: 0;
    background: var(--surface);
    border-top: 1px solid var(--border);
    padding: var(--space-2xl) var(--gutter) var(--space-lg);
  }

  .footer-inner {
    max-width: var(--max-width-wide);
    margin: 0 auto;
  }

  .contact-block {
    margin-bottom: var(--space-xl);
  }

  .section-label {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 400;
    color: var(--foreground);
    margin-bottom: var(--space-6);
  }

  .contact-links {
    display: flex;
    gap: var(--space-6);
    flex-wrap: wrap;
  }

  .contact-links a {
    font-size: var(--text-base);
    color: var(--foreground);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
    font-weight: 500;
    transition:
      color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out);
  }

  .contact-links a:hover {
    color: var(--accent);
    transform: translateY(-1px);
  }

  .contact-links a:active {
    transform: translateY(0);
  }

  .copyright {
    color: var(--muted);
    font-size: var(--text-sm);
  }

  @media (prefers-reduced-motion: reduce) {
    .contact-links a {
      transition: none;
      transform: none !important;
    }
  }
</style>
