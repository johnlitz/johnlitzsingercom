---
import { navItems } from '../data/nav';

interface SidebarContext {
  narrative?: string;
  readingTime?: string;
  wordCount?: string;
  publishDate?: string;
  tags?: string[];
}

interface Props {
  currentPath: string;
  sidebarContext?: SidebarContext;
}

const { currentPath, sidebarContext } = Astro.props;
const currentYear = new Date().getFullYear();
const isHome = currentPath === '/';
const isBlogPost = currentPath.startsWith('/blog/') && currentPath !== '/blog/';

function isActive(href: string, match: 'exact' | 'prefix', path: string) {
  return match === 'exact' ? path === href : path.startsWith(href);
}
---

<a href="/" class="sidebar-identity" aria-label="Home">
  <img src="/icon.png" alt="" class="sidebar-icon" width="32" height="32" />
  <span class="name-full">John Litzsinger</span>
</a>

<div class="sidebar-content">

  {isHome ? (
    <div class="sidebar-context">
      <p class="context-tagline">Building at the intersection of finance and technology.</p>
      <div class="context-tags">
        <span class="inline-tag">finance</span>
        <span class="inline-tag">technology</span>
        <span class="inline-tag">writing</span>
      </div>
      <p class="context-availability">Open to opportunities</p>
    </div>
  ) : (
    <nav class="sidebar-nav" aria-label="Main navigation">
    {navItems.map((item) => (
      <div class="nav-item">
        <a href={item.href} data-match={item.match}
           class:list={['sidebar-link', { active: isActive(item.href, item.match, currentPath) }]}
           aria-current={isActive(item.href, item.match, currentPath) ? 'page' : undefined}>
          <span class="nav-number">{item.index}</span> {item.label}
        </a>
      </div>
    ))}
    <div class="nav-item">
      <a href="/John_Litzsinger_Resume.pdf" class="sidebar-link"
         target="_blank" rel="noopener noreferrer">
        <span class="nav-number">--</span> Resume
      </a>
    </div>
    </nav>
  )}

  {!isHome && sidebarContext && (
    <div class="sidebar-context">
      {isBlogPost && sidebarContext.readingTime && (
        <p class="context-meta">{sidebarContext.readingTime} &middot; {sidebarContext.wordCount}</p>
      )}
      {isBlogPost && sidebarContext.publishDate && (
        <p class="context-meta">{sidebarContext.publishDate}</p>
      )}
      {isBlogPost && sidebarContext.tags && sidebarContext.tags.length > 0 && (
        <div class="context-tags">
          {sidebarContext.tags.map((tag) => (
            <span class="inline-tag">{tag}</span>
          ))}
        </div>
      )}
      {!isBlogPost && sidebarContext.narrative && (
        <p class="context-narrative">{sidebarContext.narrative}</p>
      )}
      <p class="context-availability">Open to opportunities</p>
    </div>
  )}
</div>

<div class="sidebar-footer">
  <div class="sidebar-footer-links">
    <a href="mailto:jlitzsin@purdue.edu" aria-label="Email">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
    </a>
    <a href="https://www.linkedin.com/in/johnlitzsinger" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
    </a>
    <a href="https://github.com/johnlitz" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
    </a>
  </div>
  <p class="sidebar-copyright">&copy; {currentYear} John Litzsinger</p>
</div>

<style>
  /* Identity — pinned to top, single horizontal line */
  .sidebar-identity {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--foreground);
    flex-shrink: 0;
  }

  .sidebar-identity:hover {
    text-decoration: none;
    color: var(--foreground);
  }

  .sidebar-icon {
    width: 32px;
    height: 32px;
    flex-shrink: 0;
    object-fit: contain;
  }

  .name-full {
    position: relative;
    font-size: var(--text-lg);
    line-height: 1;
    letter-spacing: -0.02em;
    white-space: nowrap;
  }

  .name-full::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-base) ease;
  }

  .sidebar-identity:hover .name-full::after {
    transform: scaleX(1);
  }

  /* Content — fills remaining space, centered */
  .sidebar-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--space-sm);
  }

  /* Contextual sidebar content */
  .sidebar-context {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    margin-top: var(--space-sm);
  }

  .context-tagline {
    font-size: var(--text-base);
    color: var(--secondary);
    line-height: 1.5;
  }

  .context-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .inline-tag {
    font-size: var(--text-sm);
    color: var(--secondary);
    border-bottom: 2px solid var(--accent);
    padding-bottom: 2px;
    transition: color var(--duration-fast) ease;
  }

  .inline-tag:hover {
    color: var(--foreground);
  }

  .context-availability {
    font-size: var(--text-sm);
    color: var(--muted);
  }

  .context-narrative {
    font-size: var(--text-sm);
    color: var(--secondary);
    line-height: 1.5;
  }

  .context-meta {
    font-size: var(--text-sm);
    color: var(--muted);
    line-height: 1.4;
  }

  /* Nav */
  .sidebar-nav {
    margin-top: clamp(0.5rem, 2dvh, 1rem);
    display: flex;
    flex-direction: column;
  }

  .nav-item {
    text-align: center;
    padding: clamp(0.375rem, 1dvh, 0.75rem) 0;
    border-top: 1px solid var(--border);
  }

  .nav-item:last-child {
    border-bottom: 1px solid var(--border);
    margin-bottom: var(--space-sm);
  }

  .nav-number {
    color: var(--muted);
    font-size: 0.85em;
  }

  .sidebar-link {
    position: relative;
    display: inline-block;
    font-size: var(--text-xl);
    color: var(--foreground);
    text-decoration: none;
  }

  .sidebar-link::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-base) ease;
  }

  .sidebar-link:hover::after {
    transform: scaleX(1);
  }

  .sidebar-link.active::after {
    transform: scaleX(1);
  }

  /* Footer */
  .sidebar-footer {
    margin-top: auto;
    padding-top: var(--space-sm);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }

  .sidebar-footer-links {
    display: flex;
    gap: var(--space-md);
  }

  .sidebar-footer-links a {
    color: var(--muted);
    text-decoration: none;
    transition: color var(--duration-fast) ease;
    display: flex;
    align-items: center;
  }

  .sidebar-footer-links a:hover {
    color: var(--foreground);
    text-decoration: none;
  }

  .sidebar-copyright {
    font-size: var(--text-xs, 0.75rem);
    color: var(--muted);
  }

  @media (max-width: 768px) {
    .sidebar-content,
    .sidebar-footer {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sidebar-link::after,
    .name-full::after {
      transition: none;
    }

    .sidebar-footer-links a,
    .inline-tag {
      transition: none;
    }
  }
</style>
