---
import { navItems } from '../data/nav';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;
const currentYear = new Date().getFullYear();

function isActive(href: string, match: 'exact' | 'prefix', path: string) {
  return match === 'exact' ? path === href : path.startsWith(href);
}
---

<a href="/" class="sidebar-identity" aria-label="Home">
  <img src="/icon.png" alt="" class="sidebar-icon" width="40" height="40" />
  <div class="sidebar-identity-text">
    <span class="name-full">John Litzsinger</span>
    <span class="tagline">Finance, Markets & Technology</span>
  </div>
</a>

<div class="sidebar-content">
  <div class="sidebar-art" aria-hidden="true">
    <svg viewBox="0 0 100 130" fill="none" xmlns="http://www.w3.org/2000/svg" class="constellation">
      <!-- Connecting lines -->
      <line x1="22" y1="25" x2="72" y2="18" stroke="var(--border)" stroke-width="1"/>
      <line x1="72" y1="18" x2="58" y2="72" stroke="var(--border)" stroke-width="1"/>
      <line x1="58" y1="72" x2="28" y2="105" stroke="var(--border)" stroke-width="1"/>
      <line x1="22" y1="25" x2="58" y2="72" stroke="var(--border)" stroke-width="1"/>
      <line x1="22" y1="25" x2="28" y2="105" stroke="var(--border)" stroke-width="1"/>
      <!-- Node 1: Work -->
      <rect x="19" y="22" width="6" height="6" fill="var(--muted)" class="node"/>
      <!-- Node 2: Projects (accented) -->
      <rect x="69" y="15" width="6" height="6" fill="var(--accent)" opacity="0.6" class="node node-accent"/>
      <!-- Node 3: Writing -->
      <rect x="55" y="69" width="6" height="6" fill="var(--muted)" class="node"/>
      <!-- Node 4: Contact -->
      <rect x="25" y="102" width="6" height="6" fill="var(--muted)" class="node"/>
    </svg>
  </div>

  <nav class="sidebar-nav" aria-label="Main navigation">
    {navItems.map((item) => (
      <a href={item.href} data-match={item.match}
         class:list={['sidebar-link', { active: isActive(item.href, item.match, currentPath) }]}
         aria-current={isActive(item.href, item.match, currentPath) ? 'page' : undefined}>
        <span class="nav-number">{item.index}</span> {item.label}
      </a>
    ))}
    <div class="nav-divider"></div>
    <a href="/John_Litzsinger_Resume.pdf" class="sidebar-link resume-link"
       target="_blank" rel="noopener noreferrer">
      <span class="nav-number">--</span> Resume
      <svg class="external-icon" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
    </a>
  </nav>
</div>

<div class="sidebar-footer">
  <div class="sidebar-footer-links">
    <a href="mailto:jlitzsin@purdue.edu" aria-label="Email">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
    </a>
    <a href="https://www.linkedin.com/in/johnlitzsinger" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
    </a>
    <a href="https://github.com/johnlitz" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
    </a>
  </div>
  <p class="sidebar-copyright">&copy; {currentYear}</p>
</div>

<style>
  /* Identity — pinned to top */
  .sidebar-identity {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--foreground);
    flex-shrink: 0;
  }

  .sidebar-identity:hover {
    text-decoration: none;
    color: var(--foreground);
  }

  .sidebar-icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    object-fit: contain;
    border-radius: 4px;
  }

  .sidebar-identity-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .name-full {
    display: block;
    font-size: var(--text-lg);
    font-weight: 600;
    line-height: 1;
    letter-spacing: -0.02em;
    white-space: nowrap;
  }

  .tagline {
    display: block;
    font-size: var(--text-xs);
    color: var(--muted);
    line-height: 1;
  }

  /* Content — top-aligned, no centering */
  .sidebar-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-top: var(--space-lg);
  }

  /* Nav */
  .sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  /* Sidebar art — visible only on homepage */
  .sidebar-art {
    display: none;
    justify-content: center;
    align-items: flex-start;
    flex: 1;
    padding-top: var(--space-md);
  }

  .constellation {
    width: 100%;
    max-width: 140px;
    height: auto;
  }

  @keyframes nodePulse {
    0%, 100% { opacity: 0.6; }
    50% { opacity: 1; }
  }

  .node {
    animation: nodePulse 4s ease-in-out infinite;
  }

  .node-accent {
    animation: nodePulse 4s ease-in-out infinite 1s;
  }

  :global(body[data-page="home"]) .sidebar-art {
    display: flex;
    animation: sidebarFadeIn var(--duration-base) ease;
  }

  /* Hide nav on homepage (nav stays in DOM for transition:persist) */
  :global(body[data-page="home"]) .sidebar-nav {
    display: none;
  }

  /* Fade in nav when appearing on inner pages */
  :global(body[data-page="inner"]) .sidebar-nav {
    animation: sidebarFadeIn var(--duration-base) ease;
  }

  @keyframes sidebarFadeIn {
    from { opacity: 0; transform: translateY(4px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .nav-number {
    color: var(--muted);
    font-size: 0.85em;
    font-weight: 600;
    font-variant-numeric: tabular-nums;
    transition: color var(--duration-fast) ease;
  }

  .sidebar-link {
    position: relative;
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-base);
    color: var(--foreground);
    text-decoration: none;
    padding: var(--space-xs) var(--space-sm);
    border-radius: 4px;
    border-left: 3px solid transparent;
    transition: background-color var(--duration-fast) ease, border-color var(--duration-fast) ease;
  }

  .sidebar-link:hover {
    background-color: var(--surface);
    text-decoration: none;
  }

  .sidebar-link:hover .nav-number {
    color: var(--accent);
  }

  .sidebar-link.active {
    border-left-color: var(--accent);
    background-color: var(--surface);
  }

  .sidebar-link.active .nav-number {
    color: var(--accent);
  }

  /* Nav divider before Resume */
  .nav-divider {
    height: 1px;
    background: var(--border);
    margin: var(--space-xs) var(--space-sm);
  }

  /* Resume external icon */
  .resume-link {
    gap: var(--space-xs);
  }

  .external-icon {
    color: var(--muted);
    margin-left: auto;
    flex-shrink: 0;
    transition: color var(--duration-fast) ease;
  }

  .resume-link:hover .external-icon {
    color: var(--accent);
  }

  /* Footer */
  .sidebar-footer {
    margin-top: auto;
    padding-top: var(--space-sm);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }

  .sidebar-footer-links {
    display: flex;
    gap: var(--space-md);
  }

  .sidebar-footer-links a {
    color: var(--muted);
    text-decoration: none;
    transition: color var(--duration-fast) ease;
    display: flex;
    align-items: center;
  }

  .sidebar-footer-links a:hover {
    color: var(--accent);
    text-decoration: none;
  }

  .sidebar-copyright {
    font-size: var(--text-xs);
    color: var(--muted);
  }

  /* Tablet — tighter sidebar typography */
  @media (max-width: 1024px) and (min-width: 769px) {
    .name-full {
      font-size: var(--text-base);
    }

    .sidebar-link {
      font-size: var(--text-sm);
      padding: var(--space-xs) var(--space-xs);
    }
  }

  @media (max-width: 768px) {
    .sidebar-content,
    .sidebar-footer {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sidebar-link,
    .nav-number,
    .external-icon,
    .sidebar-footer-links a {
      transition: none;
    }

    .node,
    .node-accent {
      animation: none;
    }

    :global(body[data-page="home"]) .sidebar-art,
    :global(body[data-page="inner"]) .sidebar-nav {
      animation: none;
    }
  }
</style>
