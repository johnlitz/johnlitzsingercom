---
import { navItems } from '../data/nav';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

function isActive(href: string, match: 'exact' | 'prefix', path: string) {
  return match === 'exact' ? path === href : path.startsWith(href);
}
---

<div class="sidebar-identity">
  <a href="/" class="name-full">John<br />Litzsinger</a>
  <p class="tagline">Finance student at Purdue, entrepreneur, and market analyst — building at the intersection of capital markets, data, and technology.</p>
</div>

<nav class="sidebar-nav" aria-label="Main navigation">
  {navItems.map((item) => (
    <div class="nav-item">
      <a href={item.href} data-match={item.match}
         class:list={['sidebar-link', { active: isActive(item.href, item.match, currentPath) }]}
         aria-current={isActive(item.href, item.match, currentPath) ? 'page' : undefined}>{item.label}</a>
    </div>
  ))}
  <div class="nav-item">
    <a href="/John_Litzsinger_Resume.pdf" class="sidebar-link"
       target="_blank" rel="noopener noreferrer">Resume</a>
  </div>
</nav>

<style>
  .sidebar-identity {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .name-full {
    position: relative;
    display: inline-block;
    font-size: var(--text-2xl);
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--foreground);
    text-decoration: none;
  }

  .name-full::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-base) ease;
  }

  .name-full:hover {
    text-decoration: none;
    color: var(--foreground);
  }

  .name-full:hover::after {
    transform: scaleX(1);
  }

  /* On homepage, name has persistent underline */
  :global(body[data-page="home"]) .name-full::after {
    transform: scaleX(1);
  }

  .tagline {
    font-size: var(--text-lg);
    color: var(--secondary);
    line-height: 1.5;
  }

  .sidebar-nav {
    margin-top: var(--space-xl);
    display: flex;
    flex-direction: column;
  }

  .nav-item {
    text-align: center;
    padding: var(--space-6) 0;
    border-top: 1px solid var(--border);
  }

  .nav-item:last-child {
    border-bottom: 1px solid var(--border);
  }

  .sidebar-link {
    position: relative;
    display: inline-block;
    font-size: var(--text-xl);
    color: var(--foreground);
    text-decoration: none;
  }

  .sidebar-link::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-base) ease;
  }

  .sidebar-link:hover::after {
    transform: scaleX(1);
  }

  .sidebar-link.active::after {
    transform: scaleX(1);
  }

  /* Hide nav on homepage — sidebar persists, CSS drives visibility */
  :global(body[data-page="home"]) .sidebar-nav {
    display: none;
  }

  @media (max-width: 768px) {
    .sidebar-identity,
    .sidebar-nav {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sidebar-link::after,
    .name-full::after {
      transition: none;
    }
  }
</style>
