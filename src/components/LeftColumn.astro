---
import { navItems } from '../data/nav';

interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;
const currentYear = new Date().getFullYear();

function isActive(href: string, match: 'exact' | 'prefix', path: string) {
  return match === 'exact' ? path === href : path.startsWith(href);
}
---

<div class="sidebar-content">
  <div class="sidebar-identity">
    <a href="/" class="name-full">
      <span class="name-line">John</span>
      <span class="name-line">Litzsinger</span>
    </a>
    <p class="tagline">Finance student at Purdue, entrepreneur, and market analyst â€” building at the intersection of capital markets, data, and technology.</p>
  </div>

  <nav class="sidebar-nav" aria-label="Main navigation">
  {navItems.map((item) => (
    <div class="nav-item">
      <a href={item.href} data-match={item.match}
         class:list={['sidebar-link', { active: isActive(item.href, item.match, currentPath) }]}
         aria-current={isActive(item.href, item.match, currentPath) ? 'page' : undefined}>{item.label}</a>
    </div>
  ))}
  <div class="nav-item">
    <a href="/John_Litzsinger_Resume.pdf" class="sidebar-link"
       target="_blank" rel="noopener noreferrer">Resume</a>
  </div>
  </nav>
</div>

<div class="sidebar-footer">
  <div class="sidebar-footer-links">
    <a href="mailto:jlitzsin@purdue.edu">Email</a>
    <a href="https://www.linkedin.com/in/johnlitzsinger" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    <a href="https://github.com/johnlitz" target="_blank" rel="noopener noreferrer">GitHub</a>
  </div>
  <p class="sidebar-copyright">&copy; {currentYear} John Litzsinger</p>
</div>

<style>
  .sidebar-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .sidebar-identity {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-sm);
  }

  .name-full {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-sm);
    font-size: var(--text-2xl);
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--foreground);
    text-decoration: none;
  }

  .name-full:hover {
    text-decoration: none;
    color: var(--foreground);
  }

  .name-line {
    position: relative;
    display: inline-block;
  }

  .name-line::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-base) ease;
  }

  .name-full:hover .name-line::after {
    transform: scaleX(1);
  }

  .tagline {
    font-size: var(--text-base);
    color: var(--secondary);
    line-height: 1.5;
  }

  .sidebar-nav {
    margin-top: clamp(0.5rem, 2dvh, 1rem);
    display: flex;
    flex-direction: column;
  }

  .nav-item {
    text-align: center;
    padding: clamp(0.375rem, 1dvh, 0.75rem) 0;
    border-top: 1px solid var(--border);
  }

  .nav-item:last-child {
    border-bottom: 1px solid var(--border);
    margin-bottom: var(--space-sm);
  }

  .sidebar-link {
    position: relative;
    display: inline-block;
    font-size: var(--text-xl);
    color: var(--foreground);
    text-decoration: none;
  }

  .sidebar-link::after {
    content: '';
    position: absolute;
    bottom: -3px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-base) ease;
  }

  .sidebar-link:hover::after {
    transform: scaleX(1);
  }

  .sidebar-link.active::after {
    transform: scaleX(1);
  }

  .sidebar-footer {
    margin-top: auto;
    padding-top: var(--space-sm);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
  }

  .sidebar-footer-links {
    display: flex;
    gap: var(--space-md);
  }

  .sidebar-footer-links a {
    font-size: var(--text-sm);
    color: var(--muted);
    text-decoration: none;
    transition: color var(--duration-fast) ease;
  }

  .sidebar-footer-links a:hover {
    color: var(--foreground);
  }

  .sidebar-copyright {
    font-size: var(--text-xs, 0.75rem);
    color: var(--muted);
  }

  @media (max-width: 768px) {
    .sidebar-content,
    .sidebar-footer {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .sidebar-link::after,
    .name-line::after {
      transition: none;
    }

    .sidebar-footer-links a {
      transition: none;
    }
  }
</style>
