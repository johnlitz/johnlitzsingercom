---
const projects = [
  {
    title: 'Personal Website',
    description: 'Portfolio and blog built with Astro, MDX, and React. Brutalist-minimal design with VTF Lack typography.',
    tech: 'Astro / React',
    url: 'https://johnlitzsinger.com',
  },
  {
    title: 'Pharmacy Benefit Analyzer',
    description: 'Internal tool for modeling drug trend data and surfacing cost-saving opportunities in employer health plans.',
    tech: 'Python / Pandas',
  },
  {
    title: 'Launch Consulting Site',
    description: 'Marketing site for Purdue Launch Consulting Club. Designed and built as co-founder.',
    tech: 'HTML / CSS / JS',
    url: 'https://github.com/johnlitz',
  },
];
---

<section id="projects" aria-label="Projects">
  <h2 class="section-label">PROJECTS</h2>
  <div class="list">
    {projects.map(project => project.url ? (
      <a href={project.url} target="_blank" rel="noopener noreferrer" class="entry">
        <div class="entry-header">
          <h3>{project.title}</h3>
          <span class="tech">{project.tech}</span>
        </div>
        <p class="summary">{project.description}</p>
      </a>
    ) : (
      <div class="entry">
        <div class="entry-header">
          <h3>{project.title}</h3>
          <span class="tech">{project.tech}</span>
        </div>
        <p class="summary">{project.description}</p>
      </div>
    ))}
  </div>
</section>

<style>
  section {
    max-width: var(--content-max);
    margin-bottom: var(--space-xl);
  }

  /* .section-label inherited from global.css */

  .list {
    display: flex;
    flex-direction: column;
  }

  .entry {
    padding: var(--space-6) 0;
    border-top: 1px solid var(--border);
    transition: border-color var(--duration-fast) ease;
  }

  .entry-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-md);
    margin-bottom: var(--space-xs);
  }

  h3 {
    font-size: var(--text-base);
    color: var(--foreground);
  }

  a.entry {
    text-decoration: none;
    display: block;
    color: inherit;
  }

  a.entry:hover {
    text-decoration: none;
    border-color: var(--secondary);
  }

  a.entry:hover h3 {
    color: var(--accent);
  }

  a.entry:focus-visible {
    outline: 2px solid var(--focus-ring);
    outline-offset: 4px;
  }

  .tech {
    font-size: var(--text-sm);
    color: var(--muted);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .summary {
    font-size: var(--text-sm);
    color: var(--secondary);
    line-height: 1.6;
    max-width: 60ch;
  }

  @media (prefers-reduced-motion: reduce) {
    .entry {
      transition: none;
    }
  }

  @media (max-width: 768px) {
    .entry {
      padding: var(--space-md) 0;
    }

    .entry-header {
      flex-direction: column;
      gap: 0;
    }
  }
</style>
