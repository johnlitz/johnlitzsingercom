---
const currentPath = Astro.url.pathname;
const currentYear = new Date().getFullYear();
---

<aside class="sidebar" aria-label="Site navigation">
  <div class="sidebar-top">
    <a href="/" class="name">John<br />Litzsinger</a>
    <nav aria-label="Main navigation">
      <a href="/" class:list={['nav-link', { active: currentPath === '/' }]}>Work</a>
      <a href="/blog" class:list={['nav-link', { active: currentPath.startsWith('/blog') }]}>Writing</a>
      <a href="/John_Litzsinger_Resume.pdf" class="nav-link">Resume</a>
    </nav>
  </div>
  <div class="sidebar-bottom">
    <div class="contact">
      <a href="mailto:jlitzsin@purdue.edu">jlitzsin@purdue.edu</a>
      <a href="https://www.linkedin.com/in/johnlitzsinger" target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </div>
    <p class="copyright">&copy; {currentYear}</p>
  </div>
</aside>

<!-- Mobile header -->
<header class="mobile-header">
  <a href="/" class="mobile-name">John Litzsinger</a>
  <button class="mobile-toggle" aria-label="Toggle navigation" aria-expanded="false">
    <span class="toggle-line"></span>
    <span class="toggle-line"></span>
  </button>
</header>
<nav class="mobile-nav" aria-label="Mobile navigation" hidden>
  <a href="/" class:list={['mobile-link', { active: currentPath === '/' }]}>Work</a>
  <a href="/blog" class:list={['mobile-link', { active: currentPath.startsWith('/blog') }]}>Writing</a>
  <a href="/John_Litzsinger_Resume.pdf" class="mobile-link">Resume</a>
  <div class="mobile-contact">
    <a href="mailto:jlitzsin@purdue.edu">jlitzsin@purdue.edu</a>
    <a href="https://www.linkedin.com/in/johnlitzsinger" target="_blank" rel="noopener noreferrer">LinkedIn</a>
  </div>
</nav>

<script>
  document.addEventListener('astro:page-load', () => {
    const toggle = document.querySelector('.mobile-toggle');
    const nav = document.querySelector('.mobile-nav');
    if (!toggle || !nav) return;

    toggle.addEventListener('click', () => {
      const expanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!expanded));
      nav.hidden = expanded;
    });
  });
</script>

<style>
  /* Desktop sidebar */
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--sidebar-width);
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: var(--space-xl);
    padding: var(--space-xl) var(--space-lg);
    border-right: 1px solid var(--border);
    z-index: 50;
  }

  .name {
    font-size: var(--text-2xl);
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--foreground);
    text-decoration: none;
    display: block;
    margin-bottom: var(--space-xl);
  }

  .name:hover {
    text-decoration: none;
    color: var(--foreground);
  }

  nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .nav-link {
    font-size: var(--text-base);
    color: var(--muted);
    text-decoration: none;
    transition: color var(--duration-fast) ease;
  }

  .nav-link:hover {
    color: var(--foreground);
    text-decoration: none;
  }

  .nav-link.active {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-thickness: 1px;
  }

  .sidebar-bottom {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-top: auto;
  }

  .contact {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .contact a {
    font-size: var(--text-sm);
    color: var(--muted);
    text-decoration: none;
    transition: color var(--duration-fast) ease;
  }

  .contact a:hover {
    color: var(--foreground);
    text-decoration: none;
  }

  .copyright {
    font-size: var(--text-sm);
    color: var(--muted);
  }

  /* Mobile header */
  .mobile-header {
    display: none;
    position: sticky;
    top: 0;
    z-index: 50;
    background: var(--background);
    border-bottom: 1px solid var(--border);
    padding: var(--space-md) var(--space-md);
    align-items: center;
    justify-content: space-between;
  }

  .mobile-name {
    font-size: var(--text-lg);
    color: var(--foreground);
    text-decoration: none;
  }

  .mobile-name:hover {
    text-decoration: none;
    color: var(--foreground);
  }

  .mobile-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-sm);
    display: flex;
    flex-direction: column;
    gap: 6px;
    width: 36px;
    height: 36px;
    justify-content: center;
    align-items: center;
  }

  .toggle-line {
    display: block;
    width: 20px;
    height: 1px;
    background: var(--foreground);
  }

  .mobile-nav {
    display: none;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-md);
    border-bottom: 1px solid var(--border);
    background: var(--background);
  }

  .mobile-nav:not([hidden]) {
    display: flex;
  }

  .mobile-link {
    font-size: var(--text-base);
    color: var(--muted);
    text-decoration: none;
  }

  .mobile-link:hover {
    color: var(--foreground);
    text-decoration: none;
  }

  .mobile-link.active {
    color: var(--accent);
  }

  .mobile-contact {
    margin-top: var(--space-sm);
    padding-top: var(--space-sm);
    border-top: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .mobile-contact a {
    font-size: var(--text-sm);
    color: var(--muted);
    text-decoration: none;
  }

  .mobile-contact a:hover {
    color: var(--foreground);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }

    .mobile-header {
      display: flex;
    }

    .mobile-nav {
      display: none;
    }

    .mobile-nav:not([hidden]) {
      display: flex;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .nav-link,
    .contact a {
      transition: none;
    }
  }
</style>
