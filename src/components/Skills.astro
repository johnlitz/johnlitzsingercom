---
const skills = [
  'Market Analysis',
  'Financial Analysis',
  'Excel',
  'Client Service',
  'Leadership',
  'Project Management',
  'Presentation Skills',
  'Web Development',
  'Fund Management',
  'CRM',
  'Sales',
];
---

<section id="skills" class="skills" aria-label="Skills">
  <h2>Skills</h2>
  <div class="skill-list">
    {skills.map((skill) => (
      <span class="skill">{skill}</span>
    ))}
  </div>
</section>

<style>
  .skills {
    max-width: var(--max-width-wide);
    margin: 0 auto;
    padding: var(--space-xl) var(--gutter);
  }

  h2 {
    margin-bottom: var(--space-lg);
  }

  .skill-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .skill {
    font-size: var(--text-sm);
    padding: var(--space-sm) var(--space-3);
    border: 1px solid var(--border-strong);
    border-radius: var(--radius-pill);
    color: var(--foreground);
    background: var(--surface);
    font-weight: 500;
  }
</style>
