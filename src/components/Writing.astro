---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

{posts.length > 0 && (
  <section id="writing" aria-label="Recent writing">
    <div class="section-header">
      <h2 class="section-label">WRITING</h2>
      <a href="/blog" class="see-all">All posts</a>
    </div>
    <div class="list">
      {posts.map((post) => (
        <a href={`/blog/${post.id}`} class="entry">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
          </time>
          <h3>{post.data.title}</h3>
          <p class="desc">{post.data.description}</p>
        </a>
      ))}
    </div>
  </section>
)}

<style>
  section {
    max-width: var(--content-max);
  }

  .section-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: var(--space-md);
  }

  /* .section-label inherited from global.css (margin-bottom handled by .section-header) */

  .see-all {
    font-size: var(--text-sm);
    color: var(--secondary);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
  }

  .see-all:hover {
    color: var(--accent);
  }

  .list {
    display: flex;
    flex-direction: column;
  }

  .entry {
    display: block;
    text-decoration: none;
    color: inherit;
    padding: var(--space-6) 0;
    border-top: 1px solid var(--border);
  }

  .entry:hover {
    text-decoration: none;
  }

  .entry:hover h3 {
    color: var(--accent);
  }

  .entry:focus-visible {
    outline: 2px solid var(--focus-ring);
    outline-offset: 4px;
  }

  time {
    font-size: var(--text-sm);
    color: var(--muted);
    display: block;
    margin-bottom: var(--space-xs);
  }

  h3 {
    font-size: var(--text-lg);
    color: var(--foreground);
    margin-bottom: 4px;
    transition: color var(--duration-fast) ease;
  }

  .desc {
    font-size: var(--text-sm);
    color: var(--secondary);
    line-height: 1.5;
    max-width: 60ch;
  }

  @media (max-width: 768px) {
    .section-header {
      margin-bottom: var(--space-md);
    }

    .entry {
      padding: var(--space-md) 0;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    h3 {
      transition: none;
    }
  }
</style>
