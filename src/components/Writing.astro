---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

{posts.length > 0 && (
  <section id="writing" class="writing" aria-label="Recent writing">
    <div class="section-header">
      <h2 class="section-label">Writing</h2>
      <a href="/blog" class="see-all">All posts</a>
    </div>
    <div class="list">
      {posts.map((post) => (
        <a href={`/blog/${post.id}`} class="entry">
          <time datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
          </time>
          <h3>{post.data.title}</h3>
          <p class="desc">{post.data.description}</p>
        </a>
      ))}
    </div>
  </section>
)}

<style>
  .writing {
    max-width: var(--max-width-wide);
    margin: 0 auto;
    padding: var(--space-xl) var(--gutter);
  }

  .section-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: var(--space-lg);
  }

  .section-label {
    font-size: var(--text-sm);
    font-weight: 500;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--muted);
  }

  .see-all {
    font-size: var(--text-sm);
    color: var(--muted);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
  }

  .see-all:hover {
    color: var(--accent);
  }

  .list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .entry {
    display: block;
    text-decoration: none;
    color: inherit;
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border);
    transition: opacity 150ms ease-out;
  }

  .entry:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .entry:hover {
    text-decoration: none;
    opacity: 0.75;
  }

  time {
    font-size: var(--text-sm);
    color: var(--muted);
    display: block;
    margin-bottom: var(--space-xs);
  }

  h3 {
    font-size: var(--text-lg);
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 4px;
    color: var(--foreground);
  }

  .desc {
    font-size: var(--text-sm);
    color: var(--secondary);
    line-height: 1.5;
    max-width: 60ch;
  }

  @media (prefers-reduced-motion: reduce) {
    .entry { transition: none; }
  }
</style>
