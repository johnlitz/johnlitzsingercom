---
import { ClientRouter } from 'astro:transitions';
import BaseHead from '../components/BaseHead.astro';
import LeftColumn from '../components/LeftColumn.astro';
import TopNav from '../components/TopNav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  publishedDate?: Date;
  noindex?: boolean;
  isHome?: boolean;
}

const { title, description, image, type, publishedDate, noindex, isHome = false } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      type={type}
      publishedDate={publishedDate}
      noindex={noindex}
    />
    <ClientRouter />
  </head>
  <body>
    <a href="#main-content" class="skip-nav">Skip to main content</a>

    <!-- Mobile homepage: stacked identity + large nav -->
    {isHome && (
      <div class="mobile-home">
        <div class="mobile-home-identity">
          <h1 class="mobile-home-name">John<br />Litzsinger</h1>
          <p class="mobile-home-tagline">Finance student at Purdue, entrepreneur, and market analyst — building at the intersection of capital markets, data, and technology.</p>
        </div>
        <nav class="mobile-home-nav" aria-label="Main navigation">
          <a href="/work" class="mobile-home-link">
            <span class="mobile-home-link-title">Work</span>
            <span class="mobile-home-link-desc">Where I've built and what I've learned</span>
          </a>
          <a href="/projects" class="mobile-home-link">
            <span class="mobile-home-link-title">Projects</span>
            <span class="mobile-home-link-desc">Things I've made from scratch</span>
          </a>
          <a href="/blog" class="mobile-home-link">
            <span class="mobile-home-link-title">Writing</span>
            <span class="mobile-home-link-desc">Ideas on markets, tech, and building</span>
          </a>
          <a href="/contact" class="mobile-home-link">
            <span class="mobile-home-link-title">Contact</span>
            <span class="mobile-home-link-desc">Start a conversation</span>
          </a>
        </nav>
      </div>
    )}

    <!-- Mobile header for inner pages -->
    {!isHome && (
      <header class="mobile-header">
        <a href="/" class="mobile-name">John Litzsinger</a>
        <button class="mobile-toggle" aria-label="Toggle navigation" aria-expanded="false">
          <span class="toggle-line"></span>
          <span class="toggle-line"></span>
        </button>
      </header>
    )}
    {!isHome && (
      <nav class="mobile-nav" aria-label="Mobile navigation" hidden>
        <a href="/work" class:list={['mobile-link', { active: currentPath === '/work' }]}>Work</a>
        <a href="/projects" class:list={['mobile-link', { active: currentPath === '/projects' }]}>Projects</a>
        <a href="/blog" class:list={['mobile-link', { active: currentPath.startsWith('/blog') }]}>Writing</a>
        <a href="/contact" class:list={['mobile-link', { active: currentPath.startsWith('/contact') }]}>Contact</a>
        <a href="/John_Litzsinger_Resume.pdf" class="mobile-link">Resume</a>
      </nav>
    )}

    <div class="site" data-page={isHome ? 'home' : 'inner'}>
      <div class="left-column">
        <LeftColumn />
      </div>
      <div class="site-main">
        {!isHome && <TopNav />}
        <main id="main-content">
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>

<script>
  document.addEventListener('astro:page-load', () => {
    const toggle = document.querySelector('.mobile-toggle');
    const nav = document.querySelector('.mobile-nav');
    if (!toggle || !nav) return;

    if ((toggle as HTMLElement).dataset.bound) return;
    (toggle as HTMLElement).dataset.bound = 'true';

    toggle.addEventListener('click', () => {
      const expanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!expanded));
      (nav as HTMLElement).hidden = expanded;
    });

    nav.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', (e) => {
        if (link.getAttribute('href') === window.location.pathname) {
          e.preventDefault();
        }
        toggle.setAttribute('aria-expanded', 'false');
        (nav as HTMLElement).hidden = true;
      });
    });
  });

  document.addEventListener('astro:after-swap', () => {
    const hash = window.location.hash;
    if (!hash) return;
    const target = document.querySelector(hash);
    if (target) target.scrollIntoView({ behavior: 'instant' });
  });
</script>

<style>
  /* Site grid */
  .site {
    display: flex;
    min-height: 100vh;
  }

  /* Left column — identity zone */
  .left-column {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    z-index: 50;
    overflow: hidden;
    transition: width var(--duration-base) ease;
  }

  [data-page="home"] .left-column {
    width: var(--sidebar-width);
  }

  [data-page="inner"] .left-column {
    width: var(--strip-width);
    border-right: 1px solid var(--border);
  }

  /* Main content area */
  .site-main {
    flex: 1;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding: var(--space-xl) var(--gutter) var(--space-xl);
    transition: margin-left var(--duration-base) ease;
  }

  [data-page="home"] .site-main {
    margin-left: var(--sidebar-width);
  }

  [data-page="inner"] .site-main {
    margin-left: var(--strip-width);
  }

  main {
    flex: 1;
  }

  /* Mobile header — inner pages only */
  .mobile-header {
    display: none;
    position: sticky;
    top: 0;
    z-index: 50;
    background: var(--background);
    border-bottom: 1px solid var(--border);
    padding: var(--space-md);
    align-items: center;
    justify-content: space-between;
  }

  .mobile-name {
    font-size: var(--text-lg);
    color: var(--foreground);
    text-decoration: none;
  }

  .mobile-name:hover {
    text-decoration: none;
    color: var(--foreground);
  }

  .mobile-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-sm);
    display: flex;
    flex-direction: column;
    gap: 6px;
    width: 36px;
    height: 36px;
    justify-content: center;
    align-items: center;
  }

  .toggle-line {
    display: block;
    width: 20px;
    height: 1px;
    background: var(--foreground);
  }

  .mobile-nav {
    display: none;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-md);
    border-bottom: 1px solid var(--border);
    background: var(--background);
  }

  .mobile-nav:not([hidden]) {
    display: flex;
  }

  .mobile-link {
    font-size: var(--text-base);
    color: var(--muted);
    text-decoration: none;
  }

  .mobile-link:hover {
    color: var(--foreground);
    text-decoration: none;
  }

  .mobile-link.active {
    color: var(--accent);
  }

  /* Mobile homepage — full-screen stacked layout */
  .mobile-home {
    display: none;
    flex-direction: column;
    min-height: 100vh;
    padding: var(--space-xl) var(--space-md) var(--space-lg);
  }

  .mobile-home-identity {
    margin-bottom: var(--space-xl);
  }

  .mobile-home-name {
    font-size: var(--text-2xl);
    line-height: 1.05;
    letter-spacing: -0.02em;
    color: var(--foreground);
    margin-bottom: var(--space-md);
  }

  .mobile-home-tagline {
    font-size: var(--text-base);
    color: var(--secondary);
    line-height: 1.5;
    max-width: 50ch;
  }

  .mobile-home-nav {
    display: flex;
    flex-direction: column;
  }

  .mobile-home-link {
    display: block;
    padding: var(--space-6) 0;
    text-decoration: none;
    border-top: 1px solid var(--border);
  }

  .mobile-home-link:last-child {
    border-bottom: 1px solid var(--border);
  }

  .mobile-home-link:hover {
    text-decoration: none;
  }

  .mobile-home-link:hover .mobile-home-link-title {
    text-decoration: underline;
    text-decoration-color: var(--accent);
    text-underline-offset: 6px;
    text-decoration-thickness: 3px;
  }

  .mobile-home-link-title {
    font-size: var(--text-xl);
    color: var(--foreground);
    display: block;
    margin-bottom: 2px;
  }

  .mobile-home-link-desc {
    font-size: var(--text-sm);
    color: var(--secondary);
  }

  /* Mobile breakpoint */
  @media (max-width: 768px) {
    /* Homepage mobile: hide desktop layout, show mobile-home */
    [data-page="home"] {
      display: none;
    }

    .mobile-home {
      display: flex;
    }

    /* Inner pages mobile: keep .site but hide left column */
    [data-page="inner"] .left-column {
      display: none;
    }

    [data-page="inner"] .site-main {
      margin-left: 0;
      padding: 0 var(--space-md) var(--space-lg);
    }

    /* Hide TopNav on mobile inner pages (hamburger replaces it) */
    [data-page="inner"] :global(.top-nav) {
      display: none;
    }

    .mobile-header {
      display: flex;
    }

    .mobile-nav {
      display: none;
    }

    .mobile-nav:not([hidden]) {
      display: flex;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .left-column,
    .site-main {
      transition: none;
    }
  }
</style>
