---
import BaseLayout from './BaseLayout.astro';
import ReadingProgress from '../components/ReadingProgress.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags?: string[];
  rawContent?: string;
  prevPost?: { slug: string; title: string };
  nextPost?: { slug: string; title: string };
}

const { title, description, pubDate, updatedDate, heroImage, tags = [], rawContent = '', prevPost, nextPost } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Reading time calculation
const words = rawContent.split(/\s+/).filter(Boolean).length;
const readingMinutes = Math.max(1, Math.ceil(words / 250));
const wordCountFormatted = words >= 1000
  ? `${(words / 1000).toFixed(1)}k`
  : String(words);

const sidebarContext = {
  readingTime: `${readingMinutes} min read`,
  wordCount: `${wordCountFormatted}w`,
  publishDate: formattedDate,
  tags,
};
---

<BaseLayout
  title={`${title} â€” John Litzsinger`}
  description={description}
  image={heroImage}
  type="article"
  publishedDate={pubDate}
  sidebarContext={sidebarContext}
>
  <ReadingProgress />
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {updatedDate && (
          <span class="updated">
            (Updated <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time>)
          </span>
        )}
      </div>
      <h1>{title}</h1>
      {tags.length > 0 && (
        <div class="tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="prose">
      <slot />
    </div>
    {(prevPost || nextPost) && (
      <nav class="post-nav" aria-label="Post navigation">
        {prevPost ? (
          <a href={`/blog/${prevPost.slug}`} class="post-nav-link post-nav-prev">
            <span class="post-nav-arrow">&larr;</span> {prevPost.title}
          </a>
        ) : <span />}
        {nextPost ? (
          <a href={`/blog/${nextPost.slug}`} class="post-nav-link post-nav-next">
            {nextPost.title} <span class="post-nav-arrow">&rarr;</span>
          </a>
        ) : <span />}
      </nav>
    )}
    <footer class="post-footer">
      <a href="/blog">&larr; Back to writing</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: var(--content-max);
  }

  .post-header {
    margin-bottom: var(--space-lg);
  }

  .post-meta {
    font-size: var(--text-sm);
    color: var(--muted);
    margin-bottom: var(--space-sm);
  }

  .updated {
    color: var(--muted);
  }

  h1 {
    font-size: var(--text-2xl);
    letter-spacing: -0.02em;
    margin-bottom: var(--space-sm);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .tag {
    font-size: var(--text-sm);
    color: var(--secondary);
    border-bottom: 2px solid var(--accent);
    padding-bottom: 2px;
    transition: color var(--duration-fast) ease;
  }

  .tag:hover {
    color: var(--foreground);
  }

  /* Prose styles for MDX content */
  .prose :global(h2) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  .prose :global(h3) {
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  .prose :global(p) {
    margin-bottom: var(--space-md);
    line-height: 1.7;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .prose :global(li) {
    margin-bottom: var(--space-xs);
    line-height: 1.7;
  }

  .prose :global(blockquote) {
    border-left: 2px solid var(--accent);
    padding-left: var(--space-md);
    margin: var(--space-md) 0;
    color: var(--secondary);
  }

  .prose :global(pre) {
    margin: var(--space-md) 0;
  }

  .prose :global(img) {
    margin: var(--space-md) 0;
  }

  .prose :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
  }

  .prose :global(a:hover) {
    color: var(--accent-hover);
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: var(--space-xl) 0;
  }

  /* Next/prev navigation */
  .post-nav {
    margin-top: var(--space-2xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border);
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-md);
  }

  .post-nav-link {
    font-size: var(--text-sm);
    color: var(--foreground);
    text-decoration: none;
    transition: color var(--duration-fast) ease;
    max-width: 45%;
  }

  .post-nav-link:hover {
    color: var(--accent);
    text-decoration: none;
  }

  .post-nav-arrow {
    color: var(--muted);
  }

  .post-nav-next {
    text-align: right;
    margin-left: auto;
  }

  .post-footer {
    margin-top: var(--space-lg);
    padding-top: var(--space-lg);
  }

  .post-footer a {
    color: var(--secondary);
    font-size: var(--text-sm);
    text-decoration: underline;
    text-underline-offset: 3px;
    text-decoration-thickness: 1px;
  }

  .post-footer a:hover {
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .prose :global(h2) { margin-top: var(--space-lg); }
    .prose :global(h3) { margin-top: var(--space-md); }
  }
</style>
