---
import BaseLayout from '../layouts/BaseLayout.astro';

const highlights = [
  { label: 'Work', href: '/work', text: 'Rotational intern at Shepherd Insurance, co-founder of Purdue Launch Consulting Club, and former head analyst at Father Flips — where I drove 260% client ROI.' },
  { label: 'Projects', href: '/projects', text: 'Building tools with Python, Astro, and React across finance and data analysis.' },
  { label: 'Writing', href: '/blog', text: 'Ideas on markets, technology, and what I am learning along the way.' },
  { label: 'Contact', href: '/contact', text: 'Say hello — always open to new conversations and opportunities.' },
];
---

<BaseLayout
  title="John Litzsinger"
  description="Finance, markets, and technology."
>
  <div class="home-content">
    <div class="highlights">
      {highlights.map((item) => (
        <a href={item.href} class="highlight">
          <h2>{item.label}</h2>
          <p>{item.text}</p>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .home-content {
    max-width: var(--content-max);
  }

  .highlights {
    display: flex;
    flex-direction: column;
  }

  .highlight {
    display: block;
    padding: var(--space-xl) 0;
    text-decoration: none;
    color: inherit;
    border-top: 1px solid var(--border);
  }

  .highlight:last-child {
    border-bottom: 1px solid var(--border);
  }

  .highlight:hover {
    text-decoration: none;
  }

  .highlight:focus-visible {
    outline: 2px solid var(--focus-ring);
    outline-offset: 4px;
  }

  .highlight h2 {
    position: relative;
    display: inline-block;
    font-size: var(--text-2xl);
    color: var(--foreground);
    letter-spacing: -0.02em;
    line-height: 1.1;
    margin-bottom: var(--space-sm);
  }

  .highlight h2::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-base) ease;
  }

  .highlight:hover h2::after {
    transform: scaleX(1);
  }

  .highlight p {
    font-size: var(--text-base);
    color: var(--secondary);
    line-height: 1.6;
    max-width: 55ch;
  }

  @media (prefers-reduced-motion: reduce) {
    .highlight h2::after {
      transition: none;
    }
  }
</style>
