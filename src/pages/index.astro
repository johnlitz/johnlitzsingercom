---
import BaseLayout from '../layouts/BaseLayout.astro';

const highlights = [
  { index: '01', label: 'Work', href: '/work', text: 'Rotational intern at Shepherd Insurance, co-founder of Purdue Launch Consulting Club, and former head analyst at Father Flips — where I drove 260% client ROI.' },
  { index: '02', label: 'Projects', href: '/projects', text: 'Building tools with Python, Astro, and React across finance and data analysis.' },
  { index: '03', label: 'Writing', href: '/blog', text: 'Ideas on markets, technology, and what I am learning along the way.' },
  { index: '04', label: 'Contact', href: '/contact', text: 'Say hello — always open to new conversations and opportunities.' },
];
---

<BaseLayout
  title="John Litzsinger"
  description="Finance, markets, and technology."
>
  <div class="home-content">
    <div class="highlights">
      {highlights.map((item) => (
        <a href={item.href} class="highlight">
          <h2><span class="highlight-number">{item.index}</span> {item.label}</h2>
          <p>{item.text}</p>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .home-content {
    max-width: var(--content-max);
  }

  .highlights {
    display: flex;
    flex-direction: column;
  }

  .highlight {
    display: block;
    padding: var(--space-xl) 0;
    text-decoration: none;
    color: inherit;
    border-top: 1px solid var(--border);
  }

  .highlight:first-child {
    border-top: none;
    padding-top: 0;
  }

  .highlight:hover {
    text-decoration: none;
  }

  .highlight:focus-visible {
    outline: 2px solid var(--focus-ring);
    outline-offset: 4px;
  }

  .highlight-number {
    color: var(--accent);
    font-size: var(--text-xl);
    font-weight: 700;
  }

  .highlight h2 {
    position: relative;
    display: inline-block;
    width: fit-content;
    font-size: var(--text-2xl);
    font-weight: 600;
    color: var(--foreground);
    letter-spacing: -0.03em;
    line-height: 1.1;
    margin-bottom: var(--space-sm);
  }

  .highlight h2::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--duration-base) ease;
  }

  .highlight:hover h2::after {
    transform: scaleX(1);
  }

  .highlight p {
    font-size: var(--text-base);
    color: var(--secondary);
    line-height: 1.55;
    max-width: 60ch;
  }

@media (max-width: 768px) {
    .highlight {
      padding: var(--space-lg) 0;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .highlight h2::after {
      transition: none;
    }
  }
</style>
