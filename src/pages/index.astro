---
import BaseLayout from '../layouts/BaseLayout.astro';

const highlights = [
  { label: 'Work', href: '/work', text: 'Rotational intern at Shepherd Insurance, co-founder of Purdue Launch Consulting Club, and former head analyst at Father Flips — where I drove 260% client ROI.' },
  { label: 'Projects', href: '/projects', text: 'Building tools with Python, Astro, and React across finance and data analysis.' },
  { label: 'Writing', href: '/blog', text: 'Ideas on markets, technology, and what I am learning along the way.' },
];
---

<BaseLayout
  title="John Litzsinger"
  description="Finance, markets, and technology."
>
  <div class="home-content">
    <p class="intro">I study finance at Purdue and build things at the intersection of capital markets, data, and technology. I am interested in how systems work — financial, technical, and organizational — and I like making them better.</p>

    <div class="highlights">
      {highlights.map((item) => (
        <a href={item.href} class="highlight">
          <h2>{item.label}</h2>
          <p>{item.text}</p>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .home-content {
    max-width: var(--content-max);
  }

  .intro {
    font-size: var(--text-lg);
    color: var(--secondary);
    line-height: 1.6;
    margin-bottom: var(--space-xl);
    max-width: 55ch;
  }

  .highlights {
    display: flex;
    flex-direction: column;
  }

  .highlight {
    display: block;
    padding: var(--space-6) 0;
    text-decoration: none;
    color: inherit;
    border-top: 1px solid var(--border);
  }

  .highlight:last-child {
    border-bottom: 1px solid var(--border);
  }

  .highlight:hover {
    text-decoration: none;
  }

  .highlight:hover h2 {
    text-decoration: underline;
    text-decoration-color: var(--accent);
    text-underline-offset: 6px;
    text-decoration-thickness: 2px;
  }

  .highlight:focus-visible {
    outline: 2px solid var(--focus-ring);
    outline-offset: 4px;
  }

  .highlight h2 {
    font-size: var(--text-xl);
    color: var(--foreground);
    margin-bottom: var(--space-xs);
    text-decoration: underline;
    text-decoration-color: transparent;
    text-underline-offset: 6px;
    text-decoration-thickness: 2px;
    transition: text-decoration-color var(--duration-base) ease;
  }

  .highlight p {
    font-size: var(--text-base);
    color: var(--secondary);
    line-height: 1.6;
    max-width: 55ch;
  }

  @media (prefers-reduced-motion: reduce) {
    .highlight h2 {
      transition: none;
    }
  }
</style>
