---
import BaseLayout from '../layouts/BaseLayout.astro';

const experiences = [
  {
    title: 'Rotational Intern, Employee Benefits',
    company: 'Shepherd Insurance',
    period: 'Summer 2025',
    summary: 'Analyzed pharmacy benefit structures and drug trend data to surface cost-saving opportunities in employer health plans.',
  },
  {
    title: 'Co-founder & Finance Executive',
    company: 'Purdue Launch Consulting Club',
    period: '2023 – Present',
    summary: 'Co-founded a student consulting org — managed finances, led project teams, and built the website.',
  },
  {
    title: 'Founder & Head Analyst',
    company: 'Father Flips',
    period: '2021 – 2023',
    summary: 'Built a market analysis group around limited-availability software pricing. 260% client ROI.',
  },
];
---

<BaseLayout
  title="Work — John Litzsinger"
  description="Work experience and professional background."
>
  <div class="work-page">
    <h1>Work</h1>
    <div class="list">
      {experiences.map((exp) => (
        <div class="entry">
          <div class="entry-header">
            <div>
              <h3>{exp.title}</h3>
              <p class="company">{exp.company}</p>
            </div>
            <span class="period">{exp.period}</span>
          </div>
          <p class="summary">{exp.summary}</p>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .work-page {
    max-width: var(--content-max);
  }

  h1 {
    font-size: var(--text-2xl);
    letter-spacing: -0.02em;
    line-height: 1.1;
    margin-bottom: var(--space-xl);
  }

  .list {
    display: flex;
    flex-direction: column;
  }

  .entry {
    padding: var(--space-lg) 0.75rem;
    margin-left: -0.75rem;
    margin-right: -0.75rem;
    border-top: 1px solid var(--border);
    border-radius: 4px;
    transition: background-color var(--duration-fast) ease;
  }

  .entry:hover {
    background-color: var(--surface);
  }

  .entry-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-md);
    margin-bottom: var(--space-xs);
  }

  h3 {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--foreground);
    transition: color var(--duration-fast) ease;
  }

  .entry:hover h3 {
    color: var(--accent);
  }

  .company {
    font-size: var(--text-sm);
    color: var(--muted);
  }

  .period {
    font-size: var(--text-sm);
    color: var(--secondary);
    white-space: nowrap;
    flex-shrink: 0;
    font-variant-numeric: tabular-nums;
  }

  .summary {
    font-size: var(--text-sm);
    color: var(--secondary);
    line-height: 1.55;
    max-width: 60ch;
  }

  @media (max-width: 768px) {
    .entry {
      padding: var(--space-md) 0.75rem;
    }

    .entry-header {
      flex-direction: column;
      gap: 0;
    }

    .period {
      margin-top: var(--space-xs);
      font-size: var(--text-sm);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .entry,
    h3 {
      transition: none;
    }
  }
</style>
